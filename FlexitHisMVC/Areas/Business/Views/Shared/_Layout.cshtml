    <script>


        document.addEventListener('DOMContentLoaded', function () {
            window.addEventListener('popstate', function () {
                console.log("Back down");
                var currentUrlPath = window.location.pathname.toLowerCase();
                $('.sidebar li').each(function () {
                    var linkHref = $(this).find('a').attr('href').toLowerCase();
                    if (linkHref === currentUrlPath) {
                        $('.sidebar li').removeClass('active');
                        $(this).addClass('active');
                    }
                });

                hideLoading();
            });


            hideLoading();



            hideLoading();
            const sidebar = $('.sidebar');
            const toggleButton = $('.toggle-btn');
            const overlay = $('.overlay');
            const mainContent = $('.main-content');

            toggleButton.on('click', function () {

                sidebar.toggleClass('open');  // Sidebar'ı açıp kapatıyoruz
                $(this).toggleClass('rotate');  // Toggle butonunun dönecek olması için

                // Sidebar açıldığında overlay'ı gösteriyoruz
                if (sidebar.hasClass('open')) {
                    overlay.fadeIn();  // Overlay'ı görünür yapıyoruz
                    mainContent.addClass('blur');  // Main content'i bulanıklaştırıyoruz
                } else {
                    overlay.fadeOut();  // Overlay'ı gizliyoruz
                    mainContent.removeClass('blur');  // Main content'in bulanıklığını kaldırıyoruz
                }
            });


            overlay.on('click', function () {
                sidebar.removeClass('open');  // Sidebar'ı kapatıyoruz
                $(this).fadeOut();  // Overlay'ı gizliyoruz
                mainContent.removeClass('blur');  // Main content'in bulanıklığını kaldırıyoruz
                toggleButton.toggleClass('rotate');
            });

            var currentUrlPath = window.location.pathname.toLowerCase();
            $('.sidebar li').each(function () {
                var linkHref = $(this).find('a').attr('href').toLowerCase();
                if (linkHref === currentUrlPath) {
                    $(this).addClass('active');
                    $('#headerTitle').text($(this).find('a').text());
                    $('.breadcrumb-item.active').text($(this).find('a').text());
                }
                history.pushState({}, '', window.location);

                //}
            });

            $('.sidebar a').on('click', function () {
                $('.sidebar li').removeClass('active');
                $(this).closest('li').addClass('active');
                if (!$(this).data('no-loading')) {
                    showLoading();

                } else {
                    hideLoading();
                }
                //showLoading();
            });


            window.onpopstate = function () {
                hideLoading();
                console.log("heree popstate")
            };
            $(window).on("pageshow", function (event) {
                console.log("hereee pageshow")

                if (event.originalEvent.persisted) {
                    hideLoading(); // Eğer sayfa önbellekten yüklendiyse loading durumunu gizle
                }
            });





            $('#accordionMobile').on('click', function (event) {
                event.stopPropagation();
            });

            $('#menu-accordion .choice').on('click', function (event) {
                event.stopPropagation();

                $('#menu-accordion .choice').removeClass('expanded');

                $(this).addClass('expanded');

                $('#menu-accordion .col-1-header').addClass('d-none');
                $('#menu-accordion .card-body').addClass('d-none');
                $('#menu-accordion .col-7-header').addClass('d-none');


                $(this).find('.card-body').removeClass('d-none');
                $(this).find('.col-7-header').removeClass('d-none');

                $('#menu-accordion .choice').not(this).find('.col-1-header').removeClass('d-none');


            });


        });


    </script>
