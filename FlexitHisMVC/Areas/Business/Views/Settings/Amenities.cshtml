@model Medicloud.BLL.DTO.OrganizationAmenityDTO

<div class="container-fluid">
    <div class="row">
        <div class="col-md-6 row text-center justify-content-center">
            <form id="categoryForm" method="post" enctype="multipart/form-data" asp-action="UpdateAmenities" asp-controller="Settings" asp-area="Business">

                <div class="">
                    <input type="hidden" name="OrganizationId" asp-for="OrganizationId" />


                </div>
                <div class="d-flex justify-content-between px-0 mb-2">
                    <div class="d-flex align-items-center">
                        <a class="btn btn-sm ps-0" asp-action="Details" asp-controller="Settings" asp-route-organizationId="" asp-area="Business">
                            <svg width="32px" height="32px" viewBox="0 0 1024 1024" xmlns="http://www.w3.org/2000/svg" fill="#737373">
                                <path fill="#737373" d="M224 480h640a32 32 0 1 1 0 64H224a32 32 0 0 1 0-64z"></path>
                                <path fill="#737373" d="m237.248 512 265.408 265.344a32 32 0 0 1-45.312 45.312l-288-288a32 32 0 0 1 0-45.312l288-288a32 32 0 1 1 45.312 45.312L237.248 512z"></path>
                            </svg>
                        </a>
                        <h2 class="ms-2 text-muted">Məkan xüsusiyyətləri</h2>
                    </div>
                    <div class="d-grid gap-2 d-md-flex justify-content-md-end align-items-center">
                        @*<button type="button" id="cancelButton" class="btn border r-2">Ləğv et</button>*@
                        <button id="saveButton" class="btn btn-primary">Yadda saxla</button>
                    </div>
                </div>
                <div class="card border-0">



                    <div class="card-body ">

                        <div class="row">
                            @foreach (var ammenity in Model.Amenities)
                            {
                                <div class="col-12">
                                    <div class="form-check text-start mb-2">
                                        <input type="checkbox" style="cursor:pointer;" class="form-check-input" name="OrganizationAmenities" value="@ammenity.id" id="checkInput@(ammenity.id)"
                                               @(Model.OrganizationAmenities.Contains(ammenity.id) ? "checked" : "")>
                                        <label class="form-check-label " style="cursor:pointer;" for="checkInput@(ammenity.id)">@ammenity.name</label>
                                    </div>
                                </div>
                            }
                        </div>

                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

