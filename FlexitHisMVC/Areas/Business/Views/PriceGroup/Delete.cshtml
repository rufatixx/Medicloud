@model PriceGroup

<h2>Delete Price Group</h2>

<table class="table">
    <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Parent ID</th>
    </tr>
    <tr>
        <td>@Model.ID</td>
        <td>@Model.Name</td>
        <td>@Model.ParentID</td>
    </tr>
</table>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <p>Are you sure you want to delete this price group?</p>

    <input type="submit" value="Delete" class="btn btn-danger" />
    @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-secondary" })
}

**Представление AddService.cshtml:**
```html
@{
    var priceGroup = ViewBag.PriceGroup as PriceGroup;
    var services = ViewBag.Services as List<ServiceObj>;
}

<h2>Add Service to Price Group - @priceGroup.Name</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        @Html.Label("Service")
        @Html.DropDownList("ServiceID", new SelectList(services, "ID", "Name"), "-- Select Service --", new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.Label("Price")
        @Html.TextBox("Price", null, new { @class = "form-control" })
    </div>

    <input type="hidden" name="PriceGroupID" value="@priceGroup.ID" />

    <div class="form-group">
        <input type="submit" value="Add Service" class="btn btn-primary" />
    </div>
}


