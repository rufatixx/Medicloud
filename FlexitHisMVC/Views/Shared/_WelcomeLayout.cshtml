                                    @:Hesabınız yoxdur? <a href="@Url.Action("Index", "Registration")" class="text-muted ms-1"><b>Qeydiyyat</b></a>
                                }
                            </p>
                        </div> <!-- end col -->
                    </div>
                    <!-- end row -->

                </div> <!-- end col -->
            </div>
            <!-- end row -->
        </div>
