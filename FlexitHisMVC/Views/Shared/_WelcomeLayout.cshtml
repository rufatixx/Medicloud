                            }
                            <p class="text-muted">
                                @if (controllerName == "Registration")
                                {
                                    @:Hesabınız var? <a href="@Url.Action("Index", "Login")" class="text-muted ms-1"><b>Daxil olun</b></a>
                                }
                                else if (controllerName == "Recovery")
