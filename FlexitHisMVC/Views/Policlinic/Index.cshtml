        <div class="col-md-3 mr-3 bg-white py-3 rounded-lg">
            <h6 class="text-left text-muted">Xəstələrin siyahısı</h6>
            <ul class="list-group ">
                @{
                    if (Model.Count > 0)
                    {


                        foreach (var item in Model)
                        {
                            <li class="list-group-item d-flex align-items-center border-0" onclick="showPatientDetails(@item.ID)">
                                <img src="./res/user.svg" class="img-fluid rounded mr-3" width="50" height="50">
                                <span>@item.name @item.surname </span>
                            </li>

