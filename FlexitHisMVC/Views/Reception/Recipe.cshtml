@model List<RecipeDTO>

@{
    ViewData["Title"] = "Ödəniş Çeki";
    ViewData["BodyClass"] = "receipt-mode"; // For optional layout tweaks
    double totalPrice = 0;
}

@section Styles {
    <style>
        .receipt-wrapper * {
            font-family: 'Poppins', sans-serif;
            font-weight: 400;
            color: black;
        }

        .receipt-wrapper .container {
            border: 0.5px solid #ebebeb;
            padding: 10px;
            max-width: 350px;
            margin: 40px auto;
            background: white;
        }

        .receipt-wrapper .text-center {
            text-align: center;
        }

        .receipt-wrapper .text-right {
            text-align: right;
        }

        .receipt-wrapper .dark-background {
            background-color: #555;
            color: white;
        }

        .receipt-wrapper .info-total-price {
            font-weight: 500;
        }

        .receipt-wrapper .border-bottom {
            border-bottom: 0.5px solid #ebebeb;
        }

        .receipt-wrapper .company-name {
            font-weight: 600;
            padding-top: 20px;
            font-size: 21px;
            padding-bottom: 8px;
        }

        .receipt-wrapper p {
            padding-bottom: 5px;
            font-size: 16px;
        }

        .receipt-wrapper .main-body {
            padding: 10px 0;
        }

        .receipt-wrapper td {
            padding: 5px 0;
            font-size: 15px;
        }

        .receipt-wrapper .total td:last-child {
            font-size: 21px;
        }

        .receipt-wrapper .sub-total td {
            color: #FFFFFF;
        }

        .receipt-wrapper .info-graditude-text {
            margin-top: 10px;
        }

            .receipt-wrapper .info-graditude-text h1 {
                font-weight: 600;
                font-size: 22px;
            }

        /* Optional: hide layout UI if you control it via class */
        body.receipt-mode .navbar,
        body.receipt-mode .footer,
        body.receipt-mode .sidebar {
            display: none !important;
        }
    </style>
}

<div class="page-title-box">
    <div class="page-title-right text-end">
        <a href="javascript:window.print()">
            <button type="button" class="btn btn-primary">
                <i class="ri-printer-line"></i> Çap et
            </button>
        </a>
    </div>
    <h4 class="page-title">Ödəniş Çeki</h4>
</div>
<div class="receipt-wrapper">


    <div class="container">
        <header class="text-center">
            @if (Model != null && Model.Count > 0)
            {
                <h3 class="company-name">@Model[0].organization_name</h3>
            }
            else
            {
                <h3 class="company-name text-danger">Məlumat tapılmadı</h3>
            }

            <p>Tarix: @DateTime.Now.ToString("dd.MM.yyyy")</p>
            <p>Ödəniş Çeki</p>
        </header>

        <div class="main-body">
            <div class="info-item-list border-bottom">
                <table class="table1" style="width:100%">
                    @foreach (var item in Model)
                    {
                        double itemTotalPrice = Convert.ToDouble(item.quantity * item.price);
                        totalPrice += itemTotalPrice;
                        <tr>
                            <td>@item.service_name</td>
                            <td class="text-right">@item.quantity</td>
                            <td class="text-right">@item.price AZN</td>
                        </tr>
                    }
                    @{
                        double edvAmount = Math.Round((totalPrice * 18) / 118, 2);
                    }

                    <tr class="dark-background sub-total">
                        <td class="pad-l-5">TOPLAM QİYMƏT</td>
                        <td class="text-right" colspan="2">@totalPrice.ToString("F2") AZN</td>
                    </tr>

                    <tr class="total">
                        <td>ƏDV</td>
                        <td></td>
                        <td class="info-total-price text-right">@edvAmount.ToString("F2") AZN</td>
                    </tr>
                </table>
            </div>

            <footer class="info-client border-bottom">
                <div class="info-graditude-text text-center">
                    <h1>MEDICLOUD</h1>
                </div>
            </footer>
        </div>
    </div>
</div>
